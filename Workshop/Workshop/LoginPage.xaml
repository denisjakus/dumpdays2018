<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workshop.LoginPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Entry x:Name="userName" Placeholder="User name" TextColor="{StaticResource blueColor}"></Entry>
            <Entry x:Name="password" Placeholder="Password" TextColor="{StaticResource blueColor}"></Entry>

            <Button x:Name="btnLogin" Clicked="btnLogin_Clicked" Text="Log In" Style="{StaticResource normalButton}"></Button>
            <Label Text="DUMP DAYS 2018" HorizontalOptions="Center" Margin="0,50,0,0" 
                   TextColor="{StaticResource dumpDaysColor}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>