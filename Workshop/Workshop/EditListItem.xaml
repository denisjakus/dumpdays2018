<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workshop.EditListItem">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Clicked="Update_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblId"></Label>
            <Entry x:Name="txtHeadline" Placeholder="Enter Headline"></Entry>
            <Editor x:Name="txtText" VerticalOptions="FillAndExpand" BackgroundColor="WhiteSmoke"
                    Text="..."></Editor>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>