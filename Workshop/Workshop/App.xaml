<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workshop.App">
	<Application.Resources>

		<!-- Application resource dictionary -->

        <ResourceDictionary>
            <Color x:Key="blueColor">#00BFFF</Color>
            <Color x:Key="snowWhiteColor">#FFFAFA</Color>
            <Color x:Key="dumpDaysColor">#20B2AA</Color>


            <Style x:Key="normalButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource blueColor}"></Setter>
                <Setter Property="TextColor" Value="{StaticResource snowWhiteColor}"></Setter>
            </Style>

        </ResourceDictionary>
	</Application.Resources>
</Application>